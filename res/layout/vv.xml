<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_overlay"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
	
    <TextView
        android:id="@+id/tvDisp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:soundEffectsEnabled="true"
        android:textStyle="bold"
        android:textAppearance="@color/black_overlay"
        android:layout_alignParentLeft="true"
      
        android:layout_alignParentRight="true"
        android:text="00000"
        />

    <ImageButton
        android:id="@+id/ib2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ib1"
        android:layout_toRightOf="@+id/ib1"
        android:src="@drawable/n2"
        android:soundEffectsEnabled="true" />

    <ImageButton
        android:id="@+id/ib1"
        android:soundEffectsEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvDisp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="82dp"
        android:src="@drawable/n1" />

    <ImageButton
        android:id="@+id/ib4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ib2"
        android:layout_toLeftOf="@+id/ib2"
        android:soundEffectsEnabled="true"
        android:src="@drawable/n4" />

    <ImageButton
        android:id="@+id/ib3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ib2"
        android:layout_toRightOf="@+id/ib2"
        android:soundEffectsEnabled="true"
        android:src="@drawable/n3" />

    <ImageButton
        android:id="@+id/ib5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ib4"
        android:soundEffectsEnabled="true"
        android:layout_toLeftOf="@+id/ib3"
        android:src="@drawable/n5" />

    <ImageButton
        android:id="@+id/ib6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ib5"
        android:soundEffectsEnabled="true"
        android:layout_toRightOf="@+id/ib5"
        android:src="@drawable/n6" />

    <ImageButton
        android:id="@+id/ib7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ib4"
        android:layout_toLeftOf="@+id/ib5"
        android:soundEffectsEnabled="true"
        android:src="@drawable/n7" />

    <ImageButton
        android:id="@+id/ib8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ib5"
        android:layout_alignTop="@+id/ib7"
        android:soundEffectsEnabled="true"
        android:src="@drawable/n8" />

    <ImageButton
        android:id="@+id/ib9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ib6"
        android:layout_alignTop="@+id/ib8"
        android:soundEffectsEnabled="true"
        android:src="@drawable/n9" />

    <ImageButton
        android:id="@+id/ibclear"
        android:soundEffectsEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib2"
        android:layout_toLeftOf="@+id/ib2"
        android:src="@drawable/clear" />

    <ImageButton
        android:id="@+id/ibdot"
        android:soundEffectsEnabled="true"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib2"
        android:layout_toLeftOf="@+id/ib3"
        android:src="@drawable/dot" />

    <ImageButton
        android:id="@+id/ib0"
        android:soundEffectsEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib2"
        android:layout_toRightOf="@+id/ib2"
        android:src="@drawable/n0" />

    <ImageButton
        android:id="@+id/ibminus"
        android:soundEffectsEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib9"
        android:layout_toRightOf="@+id/ib6"
        android:src="@drawable/minus" 
        android:hapticFeedbackEnabled="true"/>

    <ImageButton
        android:id="@+id/ibplus"
        android:layout_width="60dp"
        android:soundEffectsEnabled="true"
        android:layout_height="60dp"
        android:layout_above="@+id/ibminus"
        android:layout_alignRight="@+id/ibdivide"
        android:layout_alignTop="@+id/ib9"
        android:layout_toRightOf="@+id/ib6"
        android:hapticFeedbackEnabled="true"
        android:src="@drawable/plus" />

    <ImageButton
        android:id="@+id/ibmulti"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/ibplus"
        android:layout_alignLeft="@+id/ibplus"
        android:src="@drawable/multi" 
        android:soundEffectsEnabled="true"
        android:hapticFeedbackEnabled="true"/>

    <ImageButton
        android:id="@+id/ibdivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib6"
        android:layout_toRightOf="@+id/ib3"
        android:src="@drawable/divide" 
        android:soundEffectsEnabled="true"
        android:hapticFeedbackEnabled="true"/>

    <TextView
        android:id="@+id/oper"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:textStyle="bold"
       
        android:layout_alignLeft="@+id/tvDisp"
        android:layout_below="@+id/tvDisp"
        android:text="" />

    <ImageButton
        android:id="@+id/ibequal"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/ib0"
        android:layout_toRightOf="@+id/ib0"
        android:soundEffectsEnabled="true"
        android:src="@drawable/equal" />

</RelativeLayout>